<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EspacoAluno</servlet-name>
        <servlet-class>controller.EspacoAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspacoProfessor</servlet-name>
        <servlet-class>controller.EspacoProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspacoCoordenador</servlet-name>
        <servlet-class>controller.EspacoCoordenador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EspacoAluno</servlet-name>
        <url-pattern>/EspacoAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspacoProfessor</servlet-name>
        <url-pattern>/EspacoProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspacoCoordenador</servlet-name>
        <url-pattern>/EspacoCoordenador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>Espaco Aluno</web-resource-name>
            <description/>
            <url-pattern>/EspacoAluno</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>EspacoAluno</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Restrição2</display-name>
        <web-resource-collection>
            <web-resource-name>EspacoCoordenador</web-resource-name>
            <description/>
            <url-pattern>/EspacoCoordenador</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    <security-role>
        <description/>
        <role-name>EspacoAluno</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>EspacoCoordenador</role-name>
    </security-role>
    
    <login-config>  
		<auth-method>FORM</auth-method>  
		<form-login-config>    
			<form-login-page>/loginPage.html</form-login-page>    
			<form-error-page>/loginError.html</form-error-page>  
		</form-login-config> 
    </login-config>
</web-app>
